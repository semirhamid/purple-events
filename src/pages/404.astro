---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import JoinFlat from "@assets/common/JOIN-US-_1_.webp";
---

<Layout>
    <main class="bg-black min-h-screen text-white">
        <div class="container mx-auto px-4 py-32 lg:py-40">
            <div class="text-center">
                <h1
                    class="text-[120px] lg:text-[250px] font-anton leading-none text-[#F73C65] mb-10"
                >
                    404
                </h1>
                <h2 class="text-4xl lg:text-6xl font-anton mb-10">
                    LOOKS LIKE THE SHOW'S NOT HERE!
                </h2>
                <p
                    class="text-white/60 text-xl lg:text-2xl max-w-3xl mx-auto mb-16"
                >
                    Oops! Seems like you've wandered into the wrong venue. Don't
                    worry though - the party's still going strong, just not on
                    this page. Let's get you back to where the fun is!
                </p>

                <div class="flex flex-col items-center gap-12">
                    <a
                        href="/join"
                        class="transition-transform duration-300 hover:scale-110"
                    >
                        <Image
                            src={JoinFlat}
                            alt="Join Us"
                            width={468}
                            height={227}
                            class="w-[340px] lg:w-[468px] h-auto object-contain quality-100"
                        />
                    </a>

                    <a
                        href="/"
                        class="text-white/60 font-anton text-xl lg:text-2xl hover:text-white transition-colors duration-300 flex items-center gap-2"
                    >
                        <span class="transform rotate-180">â†’</span>
                        RETURN TO HOMEPAGE
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>
