---
import { Image } from "astro:assets";
import SocietyLogo from "@assets/society/society logo.png";
import LetsBrunchLogo from "@assets/lets_brunch/logo_custom.png";
import CircusElectraLogo from "@assets/circus/logo.png";
import CircusElectraSpectacleLogo from "@assets/circus_spectacle/home_logo.png";
---

<section class="bg-black text-white">
    <div class="grid grid-cols-1 md:grid-cols-2 font-anton">
        <a
            href="/my-society"
            class="gallery-card min-h-[400px] md:min-h-[838px] opacity-0"
        >
            <div class="card-inner">
                <div class="card-front bg-[#C1ABA6]">
                    <Image
                        src={SocietyLogo}
                        alt="My Societi"
                        class="w-full max-w-[250px] lg:max-w-[450px] h-auto object-cover"
                    />
                </div>
                <div class="card-back bg-[#C1ABA6]">
                    <p class="text-center text-2xl md:text-4xl">
                        Discover More About My Societi
                    </p>
                </div>
            </div>
        </a>
        <a
            href="/lets-brunch"
            class="gallery-card min-h-[400px] md:min-h-[838px] opacity-0"
        >
            <div class="card-inner">
                <div class="card-front bg-[#533B4D]">
                    <Image
                        src={LetsBrunchLogo}
                        alt="Lets Brunch"
                        class="w-full max-w-[200px] lg:max-w-[350px] h-auto object-cover"
                    />
                </div>
                <div class="card-back bg-[#533B4D]">
                    <p class="text-center text-2xl md:text-4xl">
                        Explore Let's Brunch
                    </p>
                </div>
            </div>
        </a>
        <a
            href="/circus-electra"
            class="gallery-card min-h-[400px] md:min-h-[838px] opacity-0"
        >
            <div class="card-inner">
                <div class="card-front bg-[#F564A9]">
                    <Image
                        src={CircusElectraLogo}
                        alt="Circus Electra"
                        class="w-full max-w-[250px] lg:max-w-[450px] h-auto object-cover"
                    />
                </div>
                <div class="card-back bg-[#F564A9]">
                    <p class="text-center text-2xl md:text-4xl">
                        Enter the World of Circus Electra
                    </p>
                </div>
            </div>
        </a>
        <a
            href="/circus-electra-spectacle"
            class="gallery-card min-h-[400px] md:min-h-[838px] opacity-0"
        >
            <div class="card-inner">
                <div class="card-front bg-[#FAA4BD]">
                    <Image
                        src={CircusElectraSpectacleLogo}
                        alt="Circus Electra Spectacle"
                        class="w-full max-w-[250px] lg:max-w-[450px] h-auto object-cover"
                    />
                </div>
                <div class="card-back bg-[#FAA4BD]">
                    <p class="text-center text-2xl md:text-4xl">
                        Welcome to The House of Circus Electra
                    </p>
                </div>
            </div>
        </a>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const galleryCards = document.querySelectorAll(".gallery-card");

    galleryCards.forEach((card, index) => {
        gsap.fromTo(
            card,
            {
                opacity: 0,
                y: 100,
            },
            {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: card,
                    start: "top bottom-=100",
                    end: "top center",
                    toggleActions: "play none none reverse",
                },
            }
        );
    });
</script>

<style lang="scss">
    .gallery-card {
        text-decoration: none;
        display: block;

        &:hover {
            text-decoration: none;
        }
    }
</style>
